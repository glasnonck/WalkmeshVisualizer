<Window x:Class="WalkmeshVisualizerWpf.Views.MatchingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WalkmeshVisualizerWpf.Views"
        mc:Ignorable="d"
        Title="MatchingWindow"
        Height="450" Width="300">
    <Grid>
        <ScrollViewer
            CanContentScroll="True"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Visible"
            >
            <TextBlock
                x:Name="lblMessage"
                Margin="5"
                FontSize="14"
                TextWrapping="Wrap"
                Text="The following modules have a walkmesh face at the point (100.00, 100.00):"
                />
        </ScrollViewer>
    </Grid>
</Window>
