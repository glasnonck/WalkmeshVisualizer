<UserControl x:Class="WalkmeshVisualizerWpf.UserControls.MouseHoverDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WalkmeshVisualizerWpf.UserControls"
             xmlns:help="clr-namespace:WalkmeshVisualizerWpf.Helpers"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:MouseHoverDisplayControl}"
             d:DesignHeight="100" d:DesignWidth="800">
    <UserControl.Resources>
        <help:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Grid.Column="3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Margin="10" Padding="10" Background="LightGray"
                BorderThickness="1" BorderBrush="Black"
                Visibility="{Binding ShowRimDataUnderMouse,
                    Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Visible}"
                CornerRadius="4" Opacity=".85">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="120" />
                    </Grid.ColumnDefinitions>
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="0,0,4,0" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </Style>
                    </Grid.Resources>
                    
                    <TextBlock Grid.Column="1" Text="Type" />
                    <TextBlock Grid.Column="2" Text="Template ResRef" />
                    <TextBlock Grid.Column="3" Text="Tag" />
                    <TextBlock Grid.Column="4" Text="Localized Name" />
                    <TextBlock Grid.Column="5" Text="Script On Enter" />
                </Grid>

                <ItemsControl ItemsSource="{Binding RimDataUnderMouse}" Grid.Row="1">
                    <ItemsControl.ItemTemplate>
                        <ItemContainerTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="16" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="120" />
                                </Grid.ColumnDefinitions>
                                <Grid.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Margin" Value="0,0,4,0" />
                                    </Style>
                                </Grid.Resources>
                                
                                <Rectangle Grid.Column="0" Fill="{Binding MeshColor}" Stroke="Black" StrokeThickness="1"
                                           Width="10" Height="10" HorizontalAlignment="Left" />
                                <TextBlock Grid.Column="1" Text="{Binding RimDataType}" />
                                <TextBlock Grid.Column="2" Text="{Binding ResRef}" />
                                <TextBlock Grid.Column="3" Text="{Binding Tag}" />
                                <TextBlock Grid.Column="4" Text="{Binding LocalizedName}" />
                                <TextBlock Grid.Column="5" Text="{Binding ScriptOnEnter}" />
                            </Grid>
                        </ItemContainerTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>
